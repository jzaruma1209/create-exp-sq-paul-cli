{
  "name": "jwt-auth-template",
  "version": "1.0.0",
  "description": "A comprehensive JWT authentication template for Node.js/Express applications",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "generate-secret": "node -e \"console.log('TOKEN_SECRET=' + require('crypto').randomBytes(64).toString('hex')); console.log('REFRESH_TOKEN_SECRET=' + require('crypto').randomBytes(64).toString('hex'));\""
  },
  "keywords": [
    "jwt",
    "authentication",
    "express",
    "nodejs",
    "middleware",
    "token",
    "authorization",
    "security",
    "template",
    "boilerplate"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/jwt-auth-template.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/jwt-auth-template/issues"
  },
  "homepage": "https://github.com/yourusername/jwt-auth-template#readme",
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.57.0",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/*.js"
    ],
    "coverageReporters": ["text", "lcov", "html"]
  }
}
